{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "types": ["jest"],
    "paths": {
      "@shared/*": ["../shared/*"],
      "class-validator": ["./node_modules/class-validator"]
    }
  },
  "include": ["./src/**/*.ts", "../shared/**/*.ts"]
}
